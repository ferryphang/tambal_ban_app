<h1>User Badges</h1>
<hr>
<table class="table table-bordered">
  <thead>
    <th>Name</th>
    <th>His/Her Badges</th>
    <th colspan="2">&nbsp;</th>    
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <b><%= user.name %></b>
      </td>
      <td>
        <% user.badges.each do |badge| %>
          <%= image_tag badge.picture.thumb.url %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Give Badge', give_badges_admin_user_path(user) %>
      </td>
      <td>
        <%= link_to 'Take Badge', take_badges_admin_user_path(user) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @users %>
